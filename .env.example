# ===========================================
# HeroStack Environment Configuration
# ===========================================
# Copy this file to .env and configure values
# For Dokploy: Set these in Environment Variables UI
# ===========================================

# Database Configuration
# For local/Docker Compose: use 'postgres' as host
# For Dokploy with external DB: use your database URL
DATABASE_URL="postgres://herostack:herostack123@postgres:5432/herostack"

# PostgreSQL (only needed if using docker-compose postgres service)
POSTGRES_USER=herostack
POSTGRES_PASSWORD=herostack123
POSTGRES_DB=herostack

# ===========================================
# Auth.js Configuration (REQUIRED)
# ===========================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Your app URL (change for production)
AUTH_URL="http://localhost:3056"

# ===========================================
# OAuth Providers (Optional)
# ===========================================
# Google OAuth
AUTH_GOOGLE_ID=""
AUTH_GOOGLE_SECRET=""

# GitHub OAuth
AUTH_GITHUB_ID=""
AUTH_GITHUB_SECRET=""
